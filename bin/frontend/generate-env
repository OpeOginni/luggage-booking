#!/usr/bin/env ruby

require 'erb'

template = File.read 'erb/next-js-frontend.env.erb'
content = ERB.new(template).result(binding)
filename = 'next-js-frontend.env'

File.write(filename, content)

template = File.read 'erb/sync.env.erb'
content = ERB.new(template).result(binding)
filename = 'sync.env'

File.write(filename, content)