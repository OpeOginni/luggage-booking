// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  email         String     @unique
  passwordHash  String

  firstName     String?
  lastName      String?

  luggages      Luggage[]

  role          AdminRole  @default(USER)

  @@map("users")
}

model Luggage {
  id                  Int               @id @default(autoincrement())
  size                Int       
  images              String[]
  items               String[]

  dangerousItems      Boolean           @default(false)

  user                User              @relation(fields: [userId], references: [id])
  userId              Int

  booking             Booking?           

  recieverName        String

  @@map("luggages")
}

model Booking {
  id                      Int           @id @default(autoincrement())
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  luggage                 Luggage       @relation(fields: [luggageId], references: [id])
  luggageId               Int           @unique

  transport               Transport     @relation(fields: [transportId], references: [id])
  transportId             Int

  status                  BookingStatus @default(PENDING)

  attendantId             Int?

  bookingVerificationCode String?
  
  @@map("bookings")
}

model Transport {
  id              Int       @id @default(autoincrement())

  departure       DateTime

  transportCode   String

  transportType   TransportType

  destination     String

  bookings        Booking[]

  maxBookingSlots Int

  @@map("transports")
}

enum BookingStatus {
  ACCEPTED
  PENDING
  REJECTED
}

enum DeliveryStatus {
  DELIVERED
  IN_TRANSIT 
}

enum AdminRole {
  USER
  ADMIN
  LUGGAGE_ATTENDANT
  CHECK_IN_PERSONNEL
}

enum TransportType {
  JETTY
  BOLT
}